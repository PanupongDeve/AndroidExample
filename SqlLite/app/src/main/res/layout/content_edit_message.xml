<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.warodom.sqllite.EditMessageActivity"
    tools:showIn="@layout/activity_edit_message">

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Board"
        android:textColor="#FF00EE"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEdtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHead" />

    <EditText
        android:id="@+id/edtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="edit title"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvEdtTitle"
        app:layout_constraintLeft_toLeftOf="@+id/edtMessage"
        app:layout_constraintLeft_toRightOf="@+id/tvEdtTitle"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvEdtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEdtTitle" />


    <EditText
        android:id="@+id/edtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="edit name"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvEdtName"
        app:layout_constraintLeft_toLeftOf="@+id/edtMessage"
        app:layout_constraintLeft_toRightOf="@+id/tvEdtName"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/message"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEdtName" />

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:lines="8"
        android:text="@string/message"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvMessage"
        app:layout_constraintLeft_toRightOf="@+id/tvMessage"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
